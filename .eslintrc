{
  "parser": "babel-eslint",
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },

  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["off", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": [
      1,
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ]
  },
  "ignorePatterns": ["node_modules/", "public/"]
}
